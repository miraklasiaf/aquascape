{
  "name": "next-ts-starter",
  "description": "NextJS with Typescript Starter Kit",
  "version": "1.0.0",
  "repository": "https://github.com/miraklasiaf/next-ts-starter",
  "author": "Faisal Karim <faisalkarim96@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "commit": "git-cz",
    "format": "prettier --write \"./**/*.{ts,tsx}\"",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "validate": "yarn lint && yarn type-check"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.1",
    "@chakra-ui/react": "^1.0.0",
    "@chakra-ui/theme": "^1.1.0",
    "@chakra-ui/theme-tools": "^1.0.1",
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "dayjs": "^1.9.6",
    "framer-motion": "^2.9.4",
    "lodash.debounce": "^4.0.8",
    "next": "^10.0.1",
    "next-google-fonts": "^1.2.1",
    "next-seo": "^4.7.3",
    "nprogress": "^0.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-responsive-carousel": "^3.2.10",
    "swr": "^0.3.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/node": "^14.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.4",
    "typescript": "^4.0.2"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "**/*.{md,yml,json,babelrc,eslintrc,prettierrc}": [
      "prettier --write"
    ]
  }
}
